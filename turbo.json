{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": ["dist/**"]
		},
		"clean": {
			"cache": false,
			"dependsOn": ["//#_clean"]
		},
		"//#_clean": {
			"cache": false
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"lint": {
			"outputs": []
		},
		"fix": {
			"cache": false,
			"dependsOn": ["format", "lint", "//#_fix"]
		},
		"//#_fix": {
			"cache": false
		},
		"format": {
			"cache": false
		},
		"install": {
			"cache": false
		}
	}
}
