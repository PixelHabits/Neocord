{
	"name": "neocord",
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"clean": "turbo run clean",
		"_clean": "git clean -fX node_modules .turbo",
		"dev": "turbo run dev",
		"fix": "turbo run fix",
		"_fix": "biome check --write .",
		"lint:ws": "bunx sherif@latest -f && turbo run install",
		"postinstall": "bun lint:ws"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"turbo": "^2.2.3",
		"typescript": "~5.6.3"
	},
	"engines": {
		"bun": ">=1.0.0"
	},
	"packageManager": "bun@1.1.34",
	"workspaces": [
		"packages/*",
		"backend",
		"frontend"
	],
	"trustedDependencies": [
		"backend"
	]
}
